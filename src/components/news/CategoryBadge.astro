---
import { HASHTAG_CATEGORIES, type HashtagKey } from '../../consts';

export interface Props {
  category: HashtagKey;
  size?: 'small' | 'normal';
  href?: string;
}

const { category, size = 'normal', href } = Astro.props;
const displayName = HASHTAG_CATEGORIES[category].name;
const categoryHref = href || `/tagg/${category}`;
---

<a href={categoryHref} class={`category-badge category-badge--${category} ${size === 'small' ? 'category-badge--small' : ''}`}>
  {displayName}
</a>