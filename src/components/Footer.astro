---
import { SITE_TITLE, SITE_DESCRIPTION, SOCIAL_LINKS } from '../consts';
---

<footer class="site-footer">
	<div class="container">
		<div class="footer-content">
			<div class="footer-brand">
				<h3 class="footer-brand__title">{SITE_TITLE}</h3>
				<p class="footer-brand__description">
					{SITE_DESCRIPTION}
				</p>
				<div class="footer-social">
					{SOCIAL_LINKS.map(link => (
						<a 
							href={link.url} 
							target="_blank" 
							rel="noopener noreferrer"
							class="footer-social__link"
							aria-label={`Följ oss på ${link.name}`}
						>
							{link.icon === 'linkedin' && (
								<svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
									<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
								</svg>
							)}
							{link.icon === 'twitter' && (
								<svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
									<path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
								</svg>
							)}
						</a>
					))}
				</div>
			</div>

			<div class="footer-links">
				<div class="footer-column">
					<h4 class="footer-column__title">Kategorier</h4>
					<ul class="footer-column__list">
						<li><a href="/kategori/ai-nyheter">AI Nyheter</a></li>
						<li><a href="/kategori/teknik">Teknik</a></li>
						<li><a href="/kategori/analys">Analys</a></li>
						<li><a href="/kategori/trender">Trender</a></li>
						<li><a href="/kategori/foretag">Företag</a></li>
					</ul>
				</div>

				<div class="footer-column">
					<h4 class="footer-column__title">Om oss</h4>
					<ul class="footer-column__list">
						<li><a href="/om-oss">Om idag.ai</a></li>
						<li><a href="/kontakt">Kontakt</a></li>
						<li><a href="/annonsera">Annonsera</a></li>
						<li><a href="/karriar">Karriär</a></li>
					</ul>
				</div>

				<div class="footer-column">
					<h4 class="footer-column__title">Support</h4>
					<ul class="footer-column__list">
						<li><a href="/hjalp">Hjälp</a></li>
						<li><a href="/integritetspolicy">Integritetspolicy</a></li>
						<li><a href="/villkor">Användarvillkor</a></li>
						<li><a href="/cookies">Cookies</a></li>
					</ul>
				</div>

				<div class="footer-column">
					<h4 class="footer-column__title">Nyhetsbrev</h4>
					<p class="footer-column__description">
						Få de senaste AI-nyheterna direkt i din inkorg.
					</p>
					<form class="footer-newsletter" action="#" method="post">
						<input 
							type="email" 
							placeholder="Din e-postadress" 
							class="footer-newsletter__input"
							required
						/>
						<button type="submit" class="footer-newsletter__button">
							Prenumerera
						</button>
					</form>
				</div>
			</div>
		</div>

		<div class="footer-bottom">
			<p class="footer-copyright">
				© {new Date().getFullYear()} {SITE_TITLE}. Alla rättigheter förbehållna.
			</p>
			<div class="footer-meta">
				<span>Byggt med ❤️ i Sverige</span>
				<span>•</span>
				<a href="/rss.xml" class="footer-rss">RSS Feed</a>
			</div>
		</div>
	</div>
</footer>

<style>
	.site-footer {
		background: var(--color-background);
		color: var(--color-primary);
		border-top: 1px solid var(--color-border);
		padding: var(--spacing-2xl) 0 var(--spacing-lg);
		margin-top: var(--spacing-3xl);
	}

	.footer-content {
		display: grid;
		grid-template-columns: 1fr 2fr;
		gap: var(--spacing-2xl, 4rem);
		margin-bottom: var(--spacing-2xl, 4rem);
	}

	.footer-brand__title {
		font-size: var(--font-size-h2);
		font-weight: var(--font-weight-bold);
		margin: 0 0 var(--spacing-md) 0;
		color: var(--color-primary);
	}

	.footer-brand__description {
		color: var(--color-secondary);
		margin: 0 0 var(--spacing-lg) 0;
		font-size: 1.125rem;
		line-height: 1.6;
	}

	.footer-social {
		display: flex;
		gap: var(--spacing-md);
	}

	.footer-social__link {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 48px;
		height: 48px;
		border-radius: 50%;
		background: var(--color-tertiary);
		color: var(--color-secondary);
		text-decoration: none;
		transition: all var(--transition-fast);
	}

	.footer-social__link:hover {
		background: var(--color-accent);
		color: var(--color-background);
		transform: translateY(-2px);
	}

	.footer-links {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		gap: var(--spacing-xl);
	}

	.footer-column__title {
		font-size: var(--font-size-body);
		font-weight: var(--font-weight-semibold);
		margin: 0 0 var(--spacing-md) 0;
		color: var(--color-primary);
	}

	.footer-column__list {
		list-style: none;
		margin: 0;
		padding: 0;
	}

	.footer-column__list li {
		margin-bottom: var(--spacing-sm);
	}

	.footer-column__list a {
		color: var(--color-secondary);
		text-decoration: none;
		transition: color var(--transition-fast);
	}

	.footer-column__list a:hover {
		color: var(--color-primary);
	}

	.footer-column__description {
		color: var(--color-secondary);
		margin: 0 0 var(--spacing-md) 0;
		font-size: var(--font-size-small);
		line-height: 1.5;
	}

	.footer-newsletter {
		display: flex;
		flex-direction: column;
		gap: var(--spacing-sm);
	}

	.footer-newsletter__input {
		padding: 0.75rem 1rem;
		border: 1px solid var(--color-border);
		border-radius: var(--border-radius-sm);
		background: var(--color-surface);
		color: var(--color-primary);
		font-size: var(--font-size-small);
		transition: all var(--transition-fast);
	}

	.footer-newsletter__input::placeholder {
		color: var(--color-secondary);
	}

	.footer-newsletter__input:focus {
		outline: none;
		border-color: var(--color-accent);
		background: var(--color-surface);
	}

	.footer-newsletter__button {
		padding: 0.75rem 1rem;
		background: var(--color-accent);
		color: var(--color-background);
		border: none;
		border-radius: var(--border-radius-sm);
		font-size: var(--font-size-small);
		font-weight: var(--font-weight-medium);
		cursor: pointer;
		transition: all var(--transition-fast);
	}

	.footer-newsletter__button:hover {
		opacity: 0.8;
		transform: translateY(-1px);
	}

	.footer-bottom {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding-top: var(--spacing-lg);
		border-top: 1px solid var(--color-border);
		color: var(--color-secondary);
		font-size: var(--font-size-small);
	}

	.footer-copyright {
		margin: 0;
	}

	.footer-meta {
		display: flex;
		align-items: center;
		gap: var(--spacing-sm);
	}

	.footer-rss {
		color: var(--color-secondary);
		text-decoration: none;
		transition: color var(--transition-fast);
	}

	.footer-rss:hover {
		color: var(--color-accent);
	}

	/* Mobile Responsive */
	@media (max-width: 768px) {
		.site-footer {
			padding: var(--spacing-xl) 0 var(--spacing-lg);
		}

		.footer-content {
			grid-template-columns: 1fr;
			gap: var(--spacing-xl);
		}

		.footer-links {
			grid-template-columns: repeat(2, 1fr);
			gap: var(--spacing-lg);
		}

		.footer-bottom {
			flex-direction: column;
			gap: var(--spacing-md);
			text-align: center;
		}
	}

	@media (max-width: 480px) {
		.footer-links {
			grid-template-columns: 1fr;
			gap: var(--spacing-lg);
		}

		.footer-social {
			justify-content: center;
		}
	}
</style>
